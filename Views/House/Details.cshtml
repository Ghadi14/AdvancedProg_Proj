@{
}
@model HouseMates.Models.House

<h1>Check this house for rent!</h1>



<table class="table">

    <thead>

        <tr>
            <td>Location</td>
            <td>Description</td>
            <td>Number Of Bedrooms</td>
            <td>Number Of Bathrooms</td>
            <td>RoomMate Description</td>
        </tr>
    </thead>

    <tbody>
     
            <tr>
            <td>@Model.location</td>
            <td>@Model.description</td>
            <td>@Model.numberOfBedrooms</td>
            <td>@Model.numberOfBathrooms</td>
            <td>@Model.roomMateDescription</td>


            <td>
                <div class="mt-3">
                    <a class="btn btn-primary" asp-controller="House" asp-action="OwnerDetails" asp-route-id="@Model.UserId">Check Owner</a>
                </div>
            </td>

            <td>
                <div class="mt-3">
                    <a class="btn btn-primary" asp-controller="House" asp-action="Location" asp-route-id="@Model.Id">Check Location</a>
                </div>
            </td>

            </tr>
        

    </tbody>

</table>
